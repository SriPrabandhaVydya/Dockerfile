pipeline {
  agent any
  stages {
    stage ('Build') {
      steps {
        bat 'set'
        bat 'docker build --dns=8.8.8.8 --dns=8.8.4.4 -t sriprabandhavydya/jenkinsdemo:%GIT_COMMIT% .'
      }
    }
    
    stage ('Publish to DockerHub') {
      steps {
        withDockerRegistry([credentialsId: "docker-hub", url: ""]) {
          bat 'docker push sriprabandhavydya/jenkinsdemo:%GIT_COMMIT%'
        }
      }
    }
  }
}
