pipeline {
  agent any
  stages {
    stage ('Build') {
      steps {
        bat 'docker build -t sriprabandhavydya/jenkinsdemo:%GIT_COMMIT% .'
      }
    }
    
    stage ('Publish to DockerHub') {
      steps {
        withDockerRegistry([credentialsId: "docker-hub", url: ""]) {
          bat 'docker push sriprabandhavydya/jenkinsdemo:%GIT_COMMIT%'
        }
      }
    }
  }
}
