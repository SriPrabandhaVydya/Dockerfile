pipeline {
    agent any

    environment {
        DOCKER_HUB_CREDENTIALS = credentials('docker-hub')
    }

    stages {
        stage('Build') {
            steps {
                script {
                    def dockerCommand = 'docker build -t sriprabandhavydya/Dockerfile:${BUILD_ID} .'
                    if (isUnix()) {
                        sh 'printenv'
                        sh dockerCommand
                    } else {
                        bat 'set'
                        bat dockerCommand
                    }
                }
            }
        }

        stage('Publish') {
            steps {
                script {
                    docker.withRegistry('', DOCKER_HUB_CREDENTIALS) {
                        def dockerCommand = 'docker push sriprabandhavydya/Dockerfile:${BUILD_ID}'
                        if (isUnix()) {
                            sh dockerCommand
                        } else {
                            bat dockerCommand
                        }
                    }
                }
            }
        }
    }
}

